<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="by.aa.pockercon">

    <application
            android:name=".presentation.app.App"
            android:allowBackup="true"
            android:icon="@drawable/ic_chip"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_chip"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="by.aa.pockercon.presentation.features.chips.ChipsActivity">
        </activity>
        <activity
                android:name="by.aa.pockercon.presentation.features.launch.LaunchActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="by.aa.pockercon.presentation.features.main.MainActivity"/>
    </application>

</manifest>